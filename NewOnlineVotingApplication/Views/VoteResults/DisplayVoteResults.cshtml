@{
    ViewBag.Title = "Vote Results";
}

<h2>Vote Results</h2>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Choice</th>
            <th>Number of Votes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var voteCount in ViewBag.VoteCounts)
        {
            <tr>
                <td>@voteCount.Key</td>
                <td>@voteCount.Value</td>
            </tr>
        }
    </tbody>
</table>
